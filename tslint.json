{
    "extends": [
      "tslint:recommended",
      "tslint-react",
      "tslint-config-prettier"
    ],
    "linterOptions": {
      "exclude": [
        "config/**/*.js",
        "node_modules/**/*.ts",
        "coverage/lcov-report/*.js",
        "src/extensions.ts",
        "libs/file-saver/file-saver.js",
        "src/styles/styles.js",
        "static/**",
        "mch/**",
        "mah/**"
      ]
    },
    "rules": {
      "no-console": [
        false
      ],
      "no-debugger": false,
      "no-empty": false,
      "curly": true,
      "indent": [
        true,
        "spaces",
        4
      ],
      "ordered-imports": false,
      "object-literal-sort-keys": false,
      "jsx-self-close": false,
      "jsx-boolean-value": false,
      "prefer-for-of": false,
      "prefer-const": false,
      "no-namespace": false,
      "no-conditional-assignment": false,
      "comment-format": false,
      "no-string-literal": false,
      "no-bitwise": false,
      "jsx-no-lambda": false,
      "no-shadowed-variable":false,
      "no-unused-vars": [2, {"vars": "all", "args": "after-used"}]
    },
    "jsRules": {
      "object-literal-sort-keys": false 
    }
  }
  